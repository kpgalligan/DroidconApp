<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="co.touchlab.droidconandroid.VoteAuthFragment">
    <RelativeLayout
        android:id="@+id/auth_fail_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <TextView
            android:id="@+id/fail_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Couldnt find ticket info. Sign in to Eventbrite used to purchase ticket"/>
        <Button
            android:id="@+id/event_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fail_text"
            android:layout_centerHorizontal="true"
            android:text="Sign in to Eventbrite"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/progress_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finding ticket information..."
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/progress"/>

    </RelativeLayout>

</RelativeLayout>
